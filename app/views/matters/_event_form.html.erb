

<%= form_for([@matter, @matter.events.build]) do |f| %>

  <%= f.label :headline%>
   <%= f.text_field :headline %> </br>
   <%= f.label :text%>
   <%= f.text_area :text %></br>
   <%= f.label :year%>
   <%= f.text_field :year %></br>
   <%= f.label :month%>
   <%= f.select :month,collection:Event::MONTH %></br>
   <%= f.label :day%>
   <%= f.select :day,collection:Event::DAY  %></br>
   <%= f.label :hour%>
   <%= f.select :hour,collection:Event::HOUR  %></br>
   <%= f.label :caption%>
   <%= f.text_field :caption %></br>
   <%= f.label :url%>
   <%= f.text_field :url %></br>
    <%= f.submit %>
<% end %>
