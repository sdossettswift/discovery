<% if @matter.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @matter.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>




<%= form_for([@matter, @matter.docs.build]) do |f| %>

  <%= f.label :title%>
   <%= f.text_field :title %> </br>
   <%= f.label :status%>
   <%= f.text_field :status %></br>
   <%= f.label :description%>
   <%= f.text_field :description %></br>
   <%= f.label :date%>
   <%= f.text_field :date%>
  <%= f.file_field :doc, as: :file %>
    <%= f.submit %>
<% end %>
