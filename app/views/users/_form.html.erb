<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>

<div class="formcontainer">
    <%=simple_form_for @user do |f|%>
      <div class="mdl-textfield mdl-js-textfield" contextmenu="" id="#formwrapper">
        <%= f.input :username, class: "mdl-textfield__input"%>
        <%= f.input :email, class: "mdl-textfield__input"%>
        <%= f.input :password, class: "mdl-textfield__input"%>
        <%= f.input :password_confirmation, class: "mdl-textfield__input"%> <br>
          <%= f.button :submit %>
      </div>
    <% end %>
</div>
