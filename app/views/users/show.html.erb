
<h5><%= @user.first_name%> <%= @user.middle_name%> <%= @user.last_name%></h5>
<%= image_tag @user.gravatar_url %>
<table>
  <tr>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Username</th>
    <th>Update</th>
  </tr>
<tr>
  <td><%= @user.first_name%></td>
  <td><%= @user.middle_name%></td>
  <td><%= @user.last_name%></td>
  <td><%= @user.email%></td>
  <td><%= @user.role%></td>
  <td><%= @user.username%></td>
  <th><%= link_to 'Update', edit_user_path(id:@user.id)%></th>
</tr>
</table>
